  "properties": {
    "ChargePeriodStart": { "type": "string", "format": "date-time" },
    "BilledCost": { "type": "number", "minimum": 0 },
    "EffectiveCost": { 
      "type": "number", 
      "description": "Amortized cost after discountsâ€”the gold standard for Tier-1 FinOps." 
    },
    "ResourceId": { "type": "string" },
